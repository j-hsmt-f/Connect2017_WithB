<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".KuchiActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtName"
        android:layout_alignStart="@+id/txtName"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="19dp"
        android:text="お名前"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="26dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtName"
        android:layout_alignStart="@+id/txtName"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="99dp"
        android:text="口コミ"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="103dp" />

    <EditText
        android:id="@+id/txtKuchi"
        android:layout_width="300dp"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="132dp" />

    <Button
        android:id="@+id/btnEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnAlldeleteK"
        android:layout_alignBottom="@+id/btnAlldeleteK"
        android:layout_centerHorizontal="true"
        android:text="登録"
        android:background="@drawable/button_customize"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="447dp" />

    <Button
        android:id="@+id/btnAlldeleteK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="76dp"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/btnEntry"
        android:layout_toRightOf="@+id/btnEntry"
        android:text="全削除"
        android:background="@drawable/button_customize"/>

    <EditText
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnEntry"
        android:layout_alignRight="@+id/btnEntry"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <Button
        android:id="@+id/btnShowK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnAlldeleteK"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnAlldeleteK"
        android:layout_marginBottom="13dp"
        android:text="中身"
        android:background="@drawable/button_customize"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtKuchi"
        android:layout_alignStart="@+id/txtKuchi"
        android:layout_below="@+id/txtKuchi"
        android:layout_marginTop="31dp"
        android:text="写真"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btnPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="16dp"
        android:text="参照"
        android:background="@drawable/button_customize"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnPic"
        android:layout_alignStart="@+id/btnPic"
        android:layout_below="@+id/btnPic"
        android:layout_marginBottom="24dp" />


</RelativeLayout>
